{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
    <div class="mx-auto max-w-lg flex justify-center mt-20 pb-48">
        <div>
            <h1 class="h3 mb-4 font-weight-normal">Register</h1>

            {{ form_start(registrationForm) }}
                <div>
                    <div class="mb-3">
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            <span class="d-block mb-2">Username</span>
                            {{ form_widget(registrationForm.username, {'attr': {'class': 'border border-gray-200 rounded-md py-1 px-2 w-full'}}) }}
                        </label>
                    </div>
                    <div class="mb-3">
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            <span class="d-block mb-2">Email</span>
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'border border-gray-200 rounded-md py-1 px-2 w-full'}}) }}
                        </label>
                    </div>
                    <div class="mb-3">
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            <span class="d-block mb-2">Password</span>
                            {{ form_widget(registrationForm.plainPassword, {
                                label: 'Password',
                                'attr': {'class': 'border border-gray-200 rounded-md py-1 px-2 w-full'}
                            }) }}
                        </label>
                    </div>
                    <div class="mb-3">
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            {{ form_widget(registrationForm.agreeTerms) }}
                            <span class="d-block mb-2">Agree to terms</span>
                        </label>
                    </div>

                    <button type="submit" class="border border-gray-200 rounded-md py-1 px-2 w-full bg-gray-200">Register</button>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
