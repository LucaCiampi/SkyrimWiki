{% extends 'base.html.twig' %}

{% block title %}
  All provinces
{% endblock %}

{% block content %}
  <h1 class="h1 text-3xl mb-3">Provinces of The Elder Scrolls</h1>
  
  {% if app.user %}
    <a href="/provinces/new" class="border border-gray-200 rounded-md py-1 px-2 bg-gray-200">Add</a>
  {% endif %}

  <div class="flex mt-4">
    {% for province in provinces %}
      <div class="m-4 p-4">
        <a href="/provinces/{{ province.name }}">
          <img src="{{ province.image }}" alt="{{ province.name }}" width="30%" height="auto" />
          <h3 class="h3 text-lg">{{ province.name }}</h3>
        </a>
      </div>
    {% endfor %}
  </div>
{% endblock %}
