{% extends 'base.html.twig' %}

{% block title %}
  All provinces
{% endblock %}

{% block content %}
  <div class="flex">
    <h1 class="h1 text-3xl mr-4">Provinces of The Elder Scrolls</h1>
    {% if app.user %}
      <a href="/provinces/new" class="block self-end rounded-md py-1 px-2 bg-sky-500 hover:bg-sky-600 duration-100 text-white">Add</a>
    {% endif %}
  </div>
  <img src="/images/provinces.png" alt="Thuum" />

  <div class="flex justify-start mt-4">
    {% for province in provinces %}
      <div class="relative w-1/5 m-4 p-4">
        <a href="/provinces/{{ province.name }}">
          <div class="relative overflow-hidden w-full h-42">
          {% if province.image %}
            <img class="object-cover mx-auto h-full w-full" src="{{ province.image }}" alt="{{ province.name }}" />
          {% else %}
            <img class="object-cover mx-auto h-full w-full" src="/images/provinces.png" alt="{{ province.name }}" />
          {% endif %}
        </div>
          <h3 class="h3 text-lg">{{ province.name }}</h3>
        </a>
      </div>
    {% endfor %}
  </div>
{% endblock %}
