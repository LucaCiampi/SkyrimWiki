{% extends 'base.html.twig' %}

{% block title %}
  {{ user.username }}
{% endblock %}

{% block content %}
  <div class="container vh-100">
    <div class="row">
      <div class="col-10 mt-5 mx-auto">
        <div>
          <div class="flex place-content-between mb-4">
            <h1 class="text-3xl m-0 p-0">{{ user.username }}</h1>
            <h2 class="text-xl m-0 p-0 font-dovahkiin">{{ user.username }}</h2>
          </div>
          <div>
            <div class="user-info mb-4">
              <div>{{ user.email }}</div>
              <div>
                {% for role in user.roles %}
                  <div class="mt-2 flex items-center text-sm text-gray-500">
                    <svg class=" w-6 h-6mr-1.5 h-5 w-5 flex-shrink-0 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 003 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 005.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 009.568 3z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6z" />
                    </svg>{{ role }}
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
