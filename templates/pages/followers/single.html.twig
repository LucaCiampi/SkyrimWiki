{% extends 'base.html.twig' %}

{% block title %}
  Single follower
{% endblock %}

{% block content %}
  <a href="/followers">&lt; Go back</a>
  <h1 class="text-3xl">{{ follower.name }}</h1>
  <h3 class="text-xl">{{ follower.race }}</h3>
  <p>Found in {{ follower.livingIn }}</p>
  <p>{{ follower.biography }}</p>
  {% if follower.image %}
    <img src="{{ follower.image }}" alt="{{ follower.name }}" />
  {% endif %}
  {% if app.user %}
    <a href="/followers/edit/{{ follower.name }}">Ã‰diter</a>
    <a href="/followers/delete/{{ follower.name }}">Supprimer</a>
  {% endif %}
{% endblock %}
