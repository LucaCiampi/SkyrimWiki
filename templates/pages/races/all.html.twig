{% extends 'base.html.twig' %}

{% block title %}
  All races
{% endblock %}

{% block content %}
  <div class="flex">
    <h1 class="h1 text-3xl mr-4">Races of Skyrim</h1>
    {% if app.user %}
      <a href="/races/new" class="block self-end rounded-md py-1 px-2 bg-sky-500 hover:bg-sky-600 duration-100 text-white">Add</a>
    {% endif %}
  </div>
  <img src="/images/thuum.png" alt="Thuum" class="w-32 absolute top-2 right-2" />

  <div class="flex mt-4">
    {% for race in races %}
      <div class="relative w-1/5 m-4 p-4">
        <a href="/races/{{ race.name }}">
          <div class="relative overflow-hidden w-full h-72 bg-gray-300">
            {% if race.image %}
              <img class="object-cover mx-auto h-full w-full" src="{{ race.image }}" alt="{{ race.name }}" />
            {% else %}
              <img class="object-cover mx-auto h-full w-full" src="/images/thuum.png" alt="{{ race.name }}" />
            {% endif %}
          </div>
          <h3 class="h3 text-lg">{{ race.name }}</h3>
        </a>
      </div>
    {% endfor %}
  </div>
{% endblock %}
