{% extends 'base.html.twig' %}

{% block title %}
  New race
{% endblock %}

{% block content %}
    <a href="/races">Go back</a>
    edit race
    {{ form_start(race_form) }}
      {# {{ form_row(race_form._token) }} #}
      <form>
          <div class="my-custom-class-for-errors">
              {{ form_errors(race_form) }}
          </div>
          <div class="form-group mb-2">
              <label class="form-label">
                  <span>Name</span>
                  {{ form_widget(race_form.name, {'attr': {'class': 'form-control'}}) }}
              </label>
          </div>
          <div class="form-group mb-2">
              <label for="race-homeland">Home land</label>
              {{ form_widget(race_form.homeland, {'attr': {'class': 'form-control', 'id' : 'race-homeland'}}) }}
          </div>
          <div class="form-group mb-2">
              <label for="race-skills">Skills</label>
              {{ form_widget(race_form.skills, {'attr': {'class': 'form-control', 'id' : 'race-skills'}}) }}
          </div>
          <div class="form-group mb-2">
              <label for="race-description">Description</label>
              {{ form_widget(race_form.description, {'attr': {'class': 'form-control', 'row': '20', 'id' : 'race-description'}}) }}
          </div>
          <div class="form-group mb-2">
              <label for="race-image">Image</label>
              {{ form_widget(race_form.image, {'attr': {'class': 'form-control', 'id' : 'race-image', 'placeholder' : 'https://....'}}) }}
          </div>
          {{ form_row(race_form.submit) }}
      </form>
      {{ form_end(race_form) }}
{% endblock %}